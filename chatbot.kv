#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex

<Messages>:
    

<MainScreen>:
    messages: messages
    inputs: inputs
    #orientation='vertical', spacing=10
    orientation: 'vertical'
    spacing: 10

    ScrollView:
        scroll_type: ['bars', 'content']
        bar_width: '10dp'
        canvas.before:
            Color:
                rgba: hex('#7093c2')
            Rectangle:
                pos: self.pos
                size: self.size

        Messages:
            id: messages
            #size_hint=(1, .8)
            size_hint: 1, 0.8

            cols: 1
            row_default_height: '40dp'
            row_force_default: True

            size_hint_y: None

            # Label:
            #     text: 'Message 1'
            # Label:
            #     text: 'Message 2'
            # Label:
            #     text: 'Message 3'

    Inputs:
        text_input: message_text_input
        button: send_button

        id: inputs
        size_hint: 1, 0.2

        TextInput:
            size_hint: 0.8, 1
            id: message_text_input
        Button:
            text: 'Send'
            size_hint: 0.2, 1
            id: send_button
            background_color: hex('#4c6fe5')
                # Color:
                #     rgba: hex('#4c6fe5')

